@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<form method="post">
    <div class="row" style="padding-left:50px; padding-top:30px;">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="User.FirstName">Imię</label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="User.FirstName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="User.LastName">Nazwisko</label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="User.LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="User.About">Komentarz</label>
                </div>
                <div class="col-sm-4">
                    <textarea asp-for="User.About" class="form-control"></textarea>
                </div>
            </div>
            <span asp-validation-for="User.About" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="">
        <input type="submit" value="Aplikuj" class="btn btn-primary" style="width:140px;" />
    </div>
</form>

